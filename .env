# Server Configuration
SERVER_PORT=8081

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/jagdishtransport_db?createDatabaseIfNotExist=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DRIVER=com.mysql.cj.jdbc.Driver

# Hibernate & JPA Configurations
JPA_DIALECT=org.hibernate.dialect.MySQL8Dialect
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_OPEN_IN_VIEW=false

# Gmail SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_AUTH=true
MAIL_STARTTLS=true

# Default Email for Fallback
DEFAULT_EMAIL=your_default_email@example.com

# File Upload Configuration
MULTIPART_FILE_SIZE_THRESHOLD=2KB
MULTIPART_MAX_FILE_SIZE=10MB
MULTIPART_MAX_REQUEST_SIZE=15MB
